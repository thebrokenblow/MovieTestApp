@page
@model Razor.Pages.Movies.CreateModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


<div class="container" style="padding-top: 35px">
    <h1>Добавление фильма к просмотру</h1>

    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div class="form-group">
                    <label class="form-label">Название фильма</label>
                    <input asp-for="Movie.Title" type="text" class="form-control">
                </div>
                <div class="form-group" style="margin-top: 20px">
                    <label class="form-label">URL фотографии</label>
                    <input asp-for="Movie.URL" type="text" class="form-control">
                </div>
                <div class="form-group" style="margin-top: 20px">
                    <label class="form-label">Описание фильма</label>
                    <input asp-for="Movie.Description" type="text" class="form-control">
                </div>
                <div class="form-group" style="margin-top: 20px">
                    <label class="form-label">Цена просмотра фильма</label>
                    <input asp-for="Movie.Cost" type="number" class="form-control">
                </div>
                <div class="form-group" style="margin-top: 20px">
                    <a href="Index" class="btn btn-primary">Назад</a>
                    <input type="submit" value="Добавить" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>